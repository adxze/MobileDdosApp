<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="May 25, 14:02"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212529" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safe"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#28a745"
            android:padding="6dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Safe - 0% DDoS traffic"
        android:textSize="14sp"
        android:textColor="#28a745"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvConnections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12,113 connections analyzed"
        android:textSize="12sp"
        android:textColor="#6c757d"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:id="@+id/layoutAttackType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvAttackType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UDP Flood"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:background="#6c757d"
                android:padding="4dp"
                android:layout_marginEnd="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View details"
            android:textSize="12sp"
            android:textColor="#007bff" />
    </LinearLayout>
</LinearLayout>